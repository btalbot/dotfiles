# settings for aws-vault https://github.com/99designs/aws-vault
export AWS_VAULT_KEYCHAIN_NAME=login
export AWS_SESSION_TOKEN_TTL=8h
function aws()
{
  aws-vault exec ${AWS_PROFILE:-$USER} -- aws "$@"
}

. "$HOME/.cargo/env"
